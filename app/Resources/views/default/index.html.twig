{% extends 'base.html.twig' %}

{% block body %}
    {% for article in articles %}

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1><a href="{{ path('show_article', { id : article.id }) }}">{{ article.title }}</a></h1>
                    <img src="{{ asset('uploads/article_pictures/' ~ article.Picture) }}" alt="Nema" class="img-full img-responsive">
                    <p>{{ article.description }}</p>
                    </br>
                    <span class="text-muted">{{ article.releaseDate|date("d/m/Y") }}</span>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}
