{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <h1 class="text-center">{{ article.title }}</h1>
                <img src="{{ asset('uploads/article_pictures/' ~ article.Picture) }}" alt="Nema" class="img-full img-responsive">
                {{ article.content|raw }}
                </br>
                <span class="text-muted">{{ article.releaseDate|date("d/m/Y") }}</span>
            </div>
        </div>
    </div>

{% endblock %}